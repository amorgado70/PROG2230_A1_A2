@model IEnumerable<ConstellationStore.Models.Product>

@{
    ViewBag.Title = "Products Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products Index</h2>
<div class="container">
    <div class="row">
        <div class="col-md-7">
        </div>
        <div class="col-md-5">
            <a href="@Url.Action("Create", "Products")" class="btn btn-primary">
                Create New &nbsp;
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
    </div>
    <hr>
</div>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive img-rounded" src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3>@Html.DisplayFor(modelItem => item.Description)</h3>
                <h4>@Html.DisplayFor(modelItem => item.Price)</h4>
                <p>@Html.DisplayFor(model => item.CostPrice)</p>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
                <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" class="btn btn-primary">
                    Details
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Edit", "Products", new { id = item.ProductId })" class="btn btn-primary">
                    Edit &nbsp; &nbsp;
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Products", new { id = item.ProductId })" class="btn btn-primary">
                    Remove &nbsp;
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    <!-- /.row -->
        <hr>
    }
</div>
