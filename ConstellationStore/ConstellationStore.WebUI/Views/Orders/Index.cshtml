@model IEnumerable<ConstellationStore.Models.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "Orders Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders Index</h2>
<div class="container">
    <div class="row margin-top-10">
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-8 col-xs-7 margin-top-10">
                    @Html.TextBox("SearchString1", "Order Id", new { id = "SearchString1", @class = "form-control" })
                </div>
                <div class="col-md-2 col-xs-2 margin-top-10">
                    <button type="submit" class="btn btn-primary glyphicon glyphicon-search" />
                </div>
                <div class="col-md-2 col-xs-2 margin-top-10">
                    <a href="@Url.Action("Index", "Orders")" class="btn btn-primary glyphicon glyphicon-remove"></a>
                </div>
            }
        </div>
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-8 col-xs-7 margin-top-10">
                    @Html.TextBox("SearchString2", "Customer Name", new { id = "SearchString2", @class = "form-control" })
                </div>
                <div class="col-md-2 col-xs-2 margin-top-10">
                    <button type="submit" class="btn btn-primary glyphicon glyphicon-search" />
                </div>
                <div class="col-md-2 col-xs-2 margin-top-10">
                    <a href="@Url.Action("Index", "Orders")" class="btn btn-primary glyphicon glyphicon-remove"></a>
                </div>
            }
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Create", "Orders")" class="btn btn-primary pull-right col-md-4 col-xs-12 margin-top-10">
                Create New &nbsp;
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row margin-top-10">
        <div class="col-md-3">
            <div class="btn btn-primary">
                @Html.ActionLink("Order Id", "Index", new { sortOrder = ViewBag.OrderIdSortParm })
                <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="btn btn-primary">
                @Html.ActionLink("Order Date", "Index", new { sortOrder = ViewBag.OrderDateSortParm })
                <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="btn btn-primary">
                @Html.ActionLink("Customer Name", "Index", new { sortOrder = ViewBag.CustomerNameSortParm })
                <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
            </div>
        </div>
    </div>
</div>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Order.OrderId
            </td>
            <td>
                @item.Order.OrderDate
            </td>
            <td>
                @item.Customer.CustomerName
            </td>
            <td>
                <a href="" class="btn btn-primary">
                    Items List
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a href="" class="btn btn-primary">
                    Edit Customer
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a href="" class="btn btn-primary">
                    Cancel Order
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
