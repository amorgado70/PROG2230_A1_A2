@{
    ViewBag.Title = "Home";
}
<div>
    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Source of images shown here is : http://www.spitzer.caltech.edu/explore/475-Wallpapers  -->
                <div class="fill" style="background-image:url('http://www.spitzer.caltech.edu/uploaded_files/other_files/0006/0616/NASA_HiddenUniverse_08.jpg');"></div>
                <div class="carousel-caption">
                    <h2>The Sword of Orion</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('http://www.spitzer.caltech.edu/uploaded_files/other_files/0006/0721/NASA_HiddenUniverse_11.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Carina Nebula</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('http://www.spitzer.caltech.edu/uploaded_files/other_files/0006/0621/NASA_HiddenUniverse_07.jpg');"></div>
                <div class="carousel-caption">
                    <h2>The Pinwheel Galaxy</h2>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
